<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contctbck1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/contactImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#dadadc"/>

            <TextView
                android:id="@+id/uploadPics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/title"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:hint="Title.."
                android:textSize="16sp"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:background="@drawable/shape_edittext"
                android:lines="8"
                android:hint="Type here.."
                android:inputType="textMultiLine"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:textSize="16sp"
                android:cursorVisible="true"
                android:gravity="top|left"
                android:paddingLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/contactCategory"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/aDdress"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:hint="Address.."
                android:textSize="16sp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/contactNo"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:hint="ContactNo."
                android:textSize="16sp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/mobileNo"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:hint="MobileNo."
                android:textSize="16sp"
                android:paddingLeft="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/emailId"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:hint="EmailID.."
                android:textSize="16sp"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/locateOnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/locateOnMap"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="#bb5756e6"
                android:textStyle="bold"
                android:gravity="left"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:text="SAVE"
                android:id="@+id/saveButton"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:background="@drawable/shape"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


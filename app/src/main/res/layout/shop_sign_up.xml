<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shopbck">

<!--<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="580dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shopbck">-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/organizationPicture"
                android:src="@drawable/camerapic"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/shopPicUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profilePic"
                android:textStyle="italic"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopName"
                android:gravity="center"
                android:inputType="text"
                android:layout_marginTop="30dp"
                android:hint="Enter shop name*"
                android:textSize="18sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopOwner"
                android:gravity="center"
                android:inputType="text"
                android:layout_marginTop="30dp"
                android:hint="Enter shop owner*"
                android:textSize="18sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopAddress"
                android:inputType="text"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:hint="Enter address*"
                android:textSize="18sp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shopPanNo"
                android:inputType="text"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:hint="Enter PAN No.*"
                android:textSize="18sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Username*"
                android:textSize="18sp"
                android:ems="10"
                android:id="@+id/shopUser"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Enter Password*"
                android:textSize="18sp"
                android:ems="10"
                android:id="@+id/shopPassword"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Re-enter password*"
                android:textSize="18sp"
                android:ems="10"
                android:id="@+id/shopRePassword"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton"
            android:src="@drawable/forward"
            android:layout_gravity="center_horizontal" />

    </RelativeLayout>

</LinearLayout>

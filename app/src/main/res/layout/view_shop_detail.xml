<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kfkfksdkfd"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/addres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jbjjjbjnjnj"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/baselines1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#DADADC" />
    <TextView
        android:id="@+id/ownername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/panNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12321321"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/viewOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locinmap"
        android:textColor="#0000ff"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
</LinearLayout>

